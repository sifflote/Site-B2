                            <input type="hidden" name="typesSelect" value='{{ typesSelect | join('_|_') | raw }}'>
                            <input type="hidden" name="debiteursSelect" value='{{ debiteursSelect | join('_|_') | raw }}'>
                            <input type="hidden" name="descriptionsSelect" value='{{ descriptionsSelect | join('_|_') | raw }}'>
                            <input type="hidden" name="designationsSelect" value='{{ designationsSelect | join('_|_') | raw }}'>
                            <input type="hidden" name="uhsSelect" value='{{ uhsSelect | join('_|_') | raw }}'>
