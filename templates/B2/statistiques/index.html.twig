{% extends 'base.html.twig' %}

{% block title %}Hello StatistiquesController!{% endblock %}

{% block body %}
<div class="container">
    <main>
        <h1>Statistiques de rejets B2</h1>
        <div class="row">
            <div class="col-3">
                <h5>Rejets Non rapproch√©s</h5>
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nb</th>
                        <th scope="col">Montant</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key, value in global %}
                    <tr class="{% if key =='Total' %} table-info{% endif %}">
                        <th scope="row">{{ key }}</th>
                        <td>{{ value.countItem }}</td>
                        <td>{{ value.sumItem|format_currency('EUR', locale='fr') }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>

{% endblock %}
