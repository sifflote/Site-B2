{% extends 'base.html.twig' %}

{% block title %}Liste des Titres en rejets B2{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <h1>Liste des Titres</h1>
            <h2><a href="{{ path('b2_titres') }}" class="link-primary">All</a> - Change Order {% if order == 'asc' %}<i class="fa-solid fa-arrow-down-wide-short"></i>{% else %}<i class="fa-solid fa-arrow-down-short-wide"></i>{% endif %}</h2>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col"><a href="{{ path('b2_by', {value: 'type',order: 'asc'}) }}">Type</a></th>
                    <th scope="col"><a href="{{ path('b2_by', {value: 'iep',order: 'asc'}) }}">IEP</a></th>
                    <th scope="col"><a href="{{ path('b2_by', {value: 'ipp',order: 'asc'}) }}">IPP</a></th>
                    <th scope="col"><a href="{{ path('b2_by', {value: 'montant',order: 'asc'}) }}">Montant</a></th>
                    <th scope="col"><a href="{{ path('b2_by', {value: 'encaissement',order: 'asc'}) }}">Encaissement</a></th>
                    <th scope="col"><a href="{{ path('b2_by', {value: 'enter_at',order: 'asc'}) }}">Entr√©e</a> || <a href="{{ path('b2_by', {value: 'exit_at',order: 'asc'}) }}">Sortie</a></th>
                    <th scope="col"><a href="{{ path('b2_by', {value: 'name',order: 'asc'}) }}">Nom</a></th>
                    <th scope="col"><a href="#">Observation</a></th>
                </tr>
                </thead>
                <tbody>
                {% for titre in titres %}
                <tr>
                    <td>{{ titre.type }}</td>
                    <th scope="row">{{ titre.iep }}</th>
                    <td>{{ titre.ipp }}</td>
                    <td>{{ titre.montant|format_currency('EUR', locale='fr') }}</td>
                    <td>{{ titre.encaissement|format_currency('EUR', locale='fr') }}</td>
                    <td>{{ titre.enterAt|date("d/m/Y") }} || {{ titre.exitAt|date("d/m/Y") }}</td>
                    <td>{{ titre.name }}</td>
                    <td></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>
    </main>

{% endblock %}